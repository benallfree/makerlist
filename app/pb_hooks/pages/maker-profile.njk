{% extends "base.njk" %}

{% block content %}
  <h5>
    <a href="/{{ maker.slug }}">{{ maker.name }}</a>
    {% if maker.x %}
      <a
        href="https://x.com/{{ maker.x }}"
        target="_blank"
        rel="noopener noreferrer"
      >
        <i class="fa-brands fa-x-twitter"></i>
      </a>
    {% endif %}
  </h5>
  <p>{{ maker.description }}</p>
  <p><i class="fa-solid fa-dollar-sign"></i>{{ maker.mrr | formatNumber }} mrr</p>
  {% if apps.length > 0 %}
    <h6>Apps</h6>
    <ul class="list-group">
      {% for app in apps %}
        <li class="list-group">
          <a href="/{{ maker.slug}}/{{ app.slug }}"> {{ app.name }} </a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endblock %}
